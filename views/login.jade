extends layout.jade

block content

	.container
		.row
			.col-md-6
				form(action="/login",method="post").form-horizontal
					.panel.panel-default
						.panel-body
							.form-group
								label.col-sm-2.control-label Username
								.col-sm-10
									input(type="text",name="username").form-control
							.form-group
								label.col-sm-2.control-label Password
								.col-sm-10
									input(type="password",name="password").form-control
						.panel-footer	
							input(type="submit",value="Log In").btn.btn-default