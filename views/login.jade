extends layout.jade


block title
	| Login

block content

	.container-fluid
		.row
			.col-md-4
				h1 Login
				form(action="/login",method="post",autocomplete="on").form-horizontal
					.panel.panel-default
						.panel-body
							.form-group
								label.col-sm-2.control-label Email
								.col-sm-10
									input(type="email",name="email", autofocus).form-control
							.form-group
								label.col-sm-2.control-label Password
								.col-sm-10
									input(type="password",name="password").form-control
						.panel-footer	
							input(type="submit",value="Log In").btn.btn-primary
							a.btn.btn-default.pull-right(href="register") Register