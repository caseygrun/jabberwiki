
extends layout.jade

block content

	h1 Register

	.container
		.row
			.col-md-6
				form(action="/register",method="post").form-horizontal
					.panel.panel-default
						.panel-body
							.form-group
								label.col-sm-2.control-label Email
								.col-sm-10
									input(type="email",name="email").form-control
							.form-group
								label.col-sm-2.control-label Full Name
								.col-sm-10
									input(type="text",name="name").form-control
							.form-group
								label.col-sm-2.control-label Password
								.col-sm-10
									input(type="password",name="password").form-control
						.panel-footer 
							input(type="submit",value="Register").btn.btn-primary
							a(href="Login").pull-right Login
