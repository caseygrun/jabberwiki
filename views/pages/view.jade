extends ../index
include mixins.jade

block title
	=metadata.title

block content
	div.container-fluid(style="padding: 0px")
		div.row-fluid
			div.col-md-2

				div#toc

					.btn-group
						btn(type="button").collapsible-expand-all.btn.btn-default: i.fa.fa-toggle-down
						btn(type="button").collapsible-collapse-all.btn.btn-default: i.fa.fa-toggle-up

			div#content.col-md-10

				mixin tabs('view')
				mixin header(metadata.title, metadata.parents)

				if metadata.version
					div.alert.alert-info
						| Viewing version 
						a(href="#")= metadata.version
						|  of this page

				!{content}

block scripts
	script(src="/js/view.js")